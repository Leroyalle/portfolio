generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Skill {
  id Int @id @default(autoincrement())

  name     String
  imageUrl String
  category Category

  createdAt DateTime @default(now())
}

model Project {
  id               Int          @id @default(autoincrement())
  name             String
  imageUrl         String
  shortDescription String
  techs            Tech[]
  projectItem      ProjectItem?
  createdAt        DateTime     @default(now())
}

model ProjectItem {
  id Int @id @default(autoincrement())

  about        String
  featuresList String
  link         String
  github       String
  project      Project @relation(fields: [projectId], references: [id])
  projectId    Int     @unique

  createdAt DateTime @default(now())
}

model Tech {
  id        Int       @id @default(autoincrement())
  name      String
  projects  Project[]
  createdAt DateTime  @default(now())
}

enum Category {
  Frontend
  Backend
}
